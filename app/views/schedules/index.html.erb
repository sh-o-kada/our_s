<%= month_calendar events: @schedules do |date, schedules| %>
  <%= date.day %>

  <% schedules.each do |schedule| %>
    <div>
      <%= link_to schedule.name, edit_schedule_path(schedule.id) %>
      <%= schedule.work_time_1.name %>
      <% if schedule.work_time_2_id != 1 %>
        <%= schedule.work_time_2.name %>
      <% end %>
      <% if schedule.work_time_3_id != 1 %>
        <%= schedule.work_time_3.name %>
      <% end %>
    </div>
  <% end %>
<% end %>