<div class="contents row">
  <div class="container">
    <h3>シフト提出</h3>
    <%= form_with(model: @schedules, local: true) do |form| %>
      <%= form.date_select :start_time %>
      <%= form.collection_select(:name, User.all, :id, :name, {}) %>
      <%= form.collection_select(:work_time_1_id, WorkTime1.all, :id, :name, {}) %>
      <%= form.collection_select(:work_time_2_id, WorkTime2.all, :id, :name, {}) %>
      <%= form.collection_select(:work_time_3_id, WorkTime3.all, :id, :name, {}) %>
      <%= form.submit "提出" %>
    <% end %>
  </div>
</div>